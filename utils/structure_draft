exchange = Exchange()
    data_center = DataCenter()
    trade_calender = TradeCalender()
    contract = Contract()
        self.operate_contract
        self.main_contract
        self.open_contract
        
    position = Position()

agent = Agent()
    self.cash
    trade_center = TradeCenter()
    strategy = Strategy()
    recorder = Recorder()

while exchange.trade_calender.is_trade_date:
    exchange.contract.renew_contract()
    if exchange.position.holding_position != []:
        if exchange.contract.operate_contract != exchange.position.holding_position['contract_id']
            agent.trade_center.close_position(contract_id=exchange.position.holding_position['contract_id'])

    signal = agent.strategy.gen_signal(data=exchange.data_center.data, position=exchange.position)
    trade_info = agent.trade_center.trade(signal)
    agent.recorder.record_trade(trade_info)
    agent.recorder.record_equity()
    exchange.trade_calender.next_day()


